auto-update-channel = tip
theme = Gruvbox Dark
font-size = 12
# font-feature = -calt 
# font-feature = -liga
# font-feature = -dlig
# cursor-style-blink = false
# shell-integration-features = no-cursor
macos-titlebar-style = hidden
